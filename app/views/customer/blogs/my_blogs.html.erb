

<div class="text-center">
  <div class="myblog min-vh-100">
  <%= stylesheet_link_tag 'blogpage', media: 'all' %>
  <h1>My Blogs</h1>
  <div class="row">
    <% @my_blogs.each do |blog| %>
      <div class="col-12 mb-4">
        <div class="card shadow-sm myblog-square-card">
          <%= image_tag blog.get_image, class: "image-tag" %>
          <div class="card-body custom-text">
            <div class="card-text" style="font-size: 18px;">
              <p><i class="fa-solid fa-shop"></i>：<%= link_to blog.name, blog_path(blog) %></p>
              <p><i class="fa-solid fa-shoe-prints"></i>：<%= blog.description %></p>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center" style="font-size: 20px;">
                <p class="mr-3"><i class="fa-regular fa-comment"></i> <%= link_to blog.blog_comments.count, blog_comments_path(blog) %></p>
                <div id="favorite_buttons_<%= blog.id %>">
                  <%= render "customer/favorites/favorites", blog: blog %>
                </div>
              </div>
              <div class="d-flex align-items-center" style="font-size: 18px;">
                <p><%= blog.customer.first_name %>&emsp;<%= blog.created_at.strftime('%Y/%m/%d') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>