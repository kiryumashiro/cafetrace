<div class="blog-new">
  <%= stylesheet_link_tag 'blogpage', media: 'all' %>
  <div class="text-center form-new">
    <%= form_with model: @blog do |f| %>
      <h4 style="font-size: 30px;">画像</h4>
      <%= f.file_field :image, class: "form-control", accept: "image/*" %>
      
      <h4 style="font-size: 30px;">店名</h4>
      <%= f.text_field :name, class: "form-control" %>
      
      <h4 style="font-size: 30px;">コメント</h4>
      <%= f.text_area :description, class: "form-control" %> <br>
      
      <%= f.submit '投稿', class: "btn btn-xs btn-secondary" %>
    <% end %>
    <br>
    <%= link_to "戻る", :back %>
  </div>
</div>
