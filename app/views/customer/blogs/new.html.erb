<div class="text-center">
  <h1>ブログ新規投稿</h1>
  <%= form_with model: @blog do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, class: "form-control", accept: "image/*" %>
  <h4>店名</h4>
  <%= f.text_field :name, class: "form-control" %>
  <h4>コメント</h4>
  <%= f.text_area :description, class: "form-control" %> <br>
  <%= f.submit '投稿' %>
  <% end %>
</div>